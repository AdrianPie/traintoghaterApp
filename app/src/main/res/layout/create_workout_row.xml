<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/image_create_workout"
                android:layout_width="229dp"
                android:layout_height="142dp"
                android:src="@drawable/thirdexercise"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/quantity_create_exercise"
                android:layout_width="89dp"
                android:layout_height="62dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:hint="quantity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/duration_create_exercise"
                android:layout_width="86dp"
                android:layout_height="62dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="16dp"
                android:hint="duration"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/quantity_create_exercise" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/sets_create_exercise"
                android:layout_width="72dp"
                android:layout_height="61dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="16dp"
                android:hint="sets"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/duration_create_exercise" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/break_create_exercise"
                android:layout_width="70dp"
                android:layout_height="59dp"
                android:layout_marginBottom="16dp"
                android:hint="break"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.595"
                app:layout_constraintStart_toEndOf="@+id/sets_create_exercise" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>